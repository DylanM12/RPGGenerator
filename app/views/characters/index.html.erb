<ul>
    <li><%= link_to "Home Page", controller: 'welcome' %></li>
    <li><%= link_to "Characters Page", controller: 'characters' %></li>
    <li><%= link_to "Create A New Character", new_character_path %></li>
</ul>
<body>
<h1>Listing characters</h1>
 </br>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
 
  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.description %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Destroy',
                                character_path(character),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</body>