<body>
<p>
    Character Name: 
    <%= @character.name %>
</p>

<p>
    Character Description:
    <%= @character.description %>
</p>

<h2>Campaigns</h2>
<% @character.campaigns.each do |campaign| %>
    <p>
        <strong>Title:</strong>
        <%= campaign.title %>
    </p>
    
    <p>
        <strong>Information:</strong>
        <%= campaign.info %>
    </p>
<% end %>

<h2>Add A Campaign for this Character</h2>
<%= form_for([@character, @character.campaigns.build]) do |f| %>
    <p>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :info %><br>
        <%= f.text_area :info %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Character List', characters_path %>
</body>